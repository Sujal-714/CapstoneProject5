<html>
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Create post</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/styles/style.css">
</head>
<body>
  <%- include("./partials/header.ejs") %>
    <section id="create-post">
    <h2>Create post</h2><br />
    <form action="/submit" method="POST" >
        <div class="mb-3">
            <label for="title" class="form-label">Title</label>
            <input name = "title" type="text" class="form-control" id="post-title" placeholder="Grave of the Fireflies">
          </div>
          <div class="mb-3">
            <label for="description" class="form-label">Description</label>
            <textarea name="description" class="form-control" id="post-description" rows="3"></textarea>
          </div>
         <div class="mb-3">
  <label for="post-rating" class="form-label">Rating</label>
  <select name="rating" class="form-select" id="post-rating">
    <option value="" selected disabled>Select a rating</option>
    <option value="1">1 - Very Poor</option>
    <option value="2">2 - Poor</option>
    <option value="3">3 - Average</option>
    <option value="4">4 - Good</option>
    <option value="5">5 - Excellent</option>
  </select>
</div>
       <label for="isbn" class="form-label">ISBN</label><br />
<input name="isbn" type="text" class="form-control" id="isbn" placeholder="e.g. 0451526538" required><br />
<div class="centred-button">
  <button type="submit" class="btn btn-dark">Post</button>
</div>

      </form>
    </section>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.5/dist/js/bootstrap.bundle.min.js" integrity="sha384-k6d4wzSIapyDyv1kpU366/PK5hCdSbCRGRCMv+eplOQJWyd1fbcAu9OCUj5zNLiq" crossorigin="anonymous"></script>

</body>
</html>
